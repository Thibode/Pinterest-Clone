{% extends 'layouts/base.html.twig' %}

{% block title %}Register !{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
 <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-5 text-center">Create an account</h1>

                {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-md-6">
                {{ form_row(registrationForm.firstName) }}
                </div>
                <div class="col-md-6">
                {{ form_row(registrationForm.lastName) }}
                </div>      
            </div>
                {{ form_row(registrationForm.email) }} 
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

            <button class="mt-4 mb-3 p-2 btn btn-primary btn-block w-100" type="submit">
                    Register
            </button>
            <p class=" mt-4 mb-3 text-center text-muted">Already have an account ? <a href="{{ path('app_login')}}">Log in</a></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
